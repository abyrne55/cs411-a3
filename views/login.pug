extends layout

block content
    doctype html
    title LEAFIFY
        head
            meta(name='author' content='Matthew Lewicki')
            meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1')
            meta(charset='UTF-8')
            script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
            title Leafify Login
        section
            h1 Welcome to Leafify
            form#loggin(method='post' name='loggin' action='/login')
                fieldset
                   input(type='submit' name='submit' value='Log in with Spotify')
